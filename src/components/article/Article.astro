---


import Grid2x2 from '@components/common/Grid2x2.astro';
import ArticleHeading from './ArticleHeading.astro';
import ArticleSubHeading from './ArticleSubHeading.astro';

const { heading, subheading, date } = Astro.props;

---

<article>

    <Grid2x2>
        <ArticleHeading text={ heading } slot="tl" />
        <ArticleSubHeading text={ date } slot="tr" />
        <ArticleSubHeading text={ subheading } slot="bl" />
    </Grid2x2>

    <slot />

</article>

<style>

    article {

        background-color: var(--background-color-900);
        contain: content;
        overflow: hidden;
        padding: 25px;
        width: 100%;

        @media (max-width: 600px) {
            padding: 10px;
        }

        p {
            font-size: 1.25rem;
            font-weight: 300;
            line-height: 1.6rem;
        }
        
    }

</style>