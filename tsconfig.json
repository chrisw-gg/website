{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".", // Sets the project root as the base directory for resolving non-relative module imports
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@content/*": ["./src/content/*"],
      "@icons/*": ["./src/assets/icons/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@themes/*": ["./src/themes/*"]
    }
  }
}